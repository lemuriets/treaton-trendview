<UserControl x:Class="LogDecoder.GUI.Views.PlotBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:local="clr-namespace:LogDecoder.GUI.Views"
             xmlns:conv="clr-namespace:LogDecoder.GUI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <conv:NaNToPlaceholderConverter x:Key="NaNToPlaceholderConverter" />
    </UserControl.Resources>
    <Border Margin="8" BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Padding="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <oxy:PlotView Model="{Binding Model}" Padding="2 0 2 0">
                
            </oxy:PlotView>

            <Grid Grid.Column="1" Margin="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    <TextBlock x:Name="TxtYValue"
                               Text="{Binding YValue, Converter={StaticResource NaNToPlaceholderConverter}}"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Grid>

                <ComboBox Grid.Row="1"
                          x:Name="SelectPlot"
                          Width="120"
                          Margin="0,8,0,0"
                          VerticalAlignment="Bottom"
                          ItemsSource="{Binding AvailablePlots}"
                          DisplayMemberPath="DisplayName"
                          SelectedItem="{Binding SelectedPlot, Mode=TwoWay}">
                </ComboBox>
            </Grid>
        </Grid>
    </Border>
</UserControl>
